<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_new_ui_card">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideVideo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideVideo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideVideo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideVideo4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />

    <ImageView
        android:id="@+id/imagem_logo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toTopOf="@id/nome"
        app:layout_constraintEnd_toStartOf="@id/guideVideo4"
        app:layout_constraintStart_toEndOf="@id/guideVideo2"
        app:layout_constraintTop_toBottomOf="@id/guideVideo1"
        app:srcCompat="@drawable/ic_logo_principal"
        tools:ignore="VectorDrawableCompat" />

    <TextView
        android:id="@+id/nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/n10"
        android:fontFamily="@font/electrolize"
        android:gravity="center"
        android:text="Super Events"
        android:textColor="@color/vermelho"
        android:textColorHint="@color/black"
        android:textSize="@dimen/ns50"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/guideVideo3"
        app:layout_constraintEnd_toStartOf="@id/guideVideo4"
        app:layout_constraintStart_toEndOf="@id/guideVideo2"
        app:layout_constraintTop_toBottomOf="@id/imagem_logo" />

</androidx.constraintlayout.widget.ConstraintLayout>